@model GummiBear.Models.BlogPost

@{
    ViewData["Title"] = "Blog Post - Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this post?</h2>
<hr />
<div class="delete-justify">
    <p class="special">Blog Post Title: @Html.DisplayFor(model => model.Title)</p>
    @using (Html.BeginForm())
    {
        <button class="btn danger-button btn-lg" type="submit" value="Delete">Confirm Delete</button>
    }
</div>
<div class="page-nav">
    @Html.ActionLink("Back to Blog", "Index")
</div>