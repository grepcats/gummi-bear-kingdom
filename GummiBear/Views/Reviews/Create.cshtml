@model GummiBear.Models.Review

@{
    ViewData["Title"] = "Review - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a New Review for @ViewBag.Product.Name</h2>
<hr />

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Author)
        @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ContentBody)
        @Html.TextAreaFor(x => x.ContentBody, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Rating)
        @Html.TextBoxFor(x => x.Rating, new { @class = "form-control" })
    </div>

    <input type="submit" value="Create" class="btn btn-default" />

}
