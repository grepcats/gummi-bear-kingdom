@model GummiBear.Models.Product

@{
    ViewData["Title"] = "Product - Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this?</h2>
<hr />
<div class="delete-justify">
    <p class="special">Product Name: @Html.DisplayFor(model => model.Name)</p>
    @using (Html.BeginForm())
    {
        <button class="btn danger-button btn-lg" type="submit" value="Delete">Confirm Delete</button>
    }
</div>
<div class="page-nav">
    @Html.ActionLink("Back to Products", "Index")
</div>