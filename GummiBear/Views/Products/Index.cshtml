@model IEnumerable<GummiBear.Models.Product>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products offered by Gummi Bear Kingdom</h2>
<hr />
<div class="options">
    @Html.ActionLink("Add new Product", "Create", null, null, new { @class = "option-item" } ) <span class="pipe">|</span>
    @Html.ActionLink("Delete all Products", "DeleteAll", null, null, new { @class = "option-item" })
</div>

@if (Model.Count() >= 1)
{
        <table class="table table-bordered table-hover table-responsive">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>Actions</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelProduct => product.Name)</td>
                <td class="center">
                    <a class="action" href=@Url.Action("Details", "Products", new { id = product.ProductId })><span class="glyphicon glyphicon-th-list" aria-label="details for product"></span></a>
                    <a class="action" href=@Url.Action("Edit", "Products", new { id = product.ProductId })><span class="glyphicon glyphicon-pencil" aria-label="edit product"></span></a>
                    <a class="action" href=@Url.Action("Delete", "Products", new { id = product.ProductId })><span class="glyphicon glyphicon-remove" aria-label="delete product"></span></a>
                    <a class="action" href=@Url.Action("LeaveReview", "Products", new { id = product.ProductId })><span class="glyphicon glyphicon-star" aria-label="leave review"></span></a>
                </td>
            </tr>

        }
</table>
}
else
{
    <p>No products yet! Please add a product above.</p>

}


<hr />
